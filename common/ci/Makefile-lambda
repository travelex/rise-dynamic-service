SLS_PATH = sls
API_PATH = $(shell ls api-operations)

default_build:
	cd api-operations/$(API_PATH) && \
		npm install --no-progress --production
	cd serverless && \
		npm install --no-progress --production && \
		SLS_DEBUG=* $(SLS_PATH) package dev ${APP_ENVIRONMENT}

default_test: ;

default_deploy:
	cd serverless && \
		SLS_DEBUG=* $(SLS_PATH) print dev ${APP_ENVIRONMENT} && \
		SLS_DEBUG=* $(SLS_PATH) deploy --verbose dev ${APP_ENVIRONMENT} --package .serverless
